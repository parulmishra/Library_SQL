@using Library.Models;

<form action="/bookform/add" method="post">
  <label for ="title">Enter the book title</label>
   <div class="form-group">
    <input type="text" name="title">
   </div>
   <label for ="title">Enter the number of copies</label>
   <div class="form-group">
    <input type="number" name="copies">
   </div>
   <h4>Select Author(s):</h4>
   @foreach (var author in Author.GetAll())
    {
      <input type="checkbox" id="@author.GetId()" name="authorIds" value="@author.GetId()"/>
        <label for="authorName">@author.GetName()</label>
     <br />
    }

<button type="submit" class="btn btn-info btn-home" name="button">Add</button>
</form>
